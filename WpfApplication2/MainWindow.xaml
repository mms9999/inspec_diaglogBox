<Window x:Class="WpfApplication2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InspecDiag" Height="800" Width="650">

    <ScrollViewer>
        <Grid Background="#FFF0F1F0">
            <Button Content="{Binding Close}" HorizontalAlignment="Left" Margin="524,10,0,0" VerticalAlignment="Top" Width="90" Height="31" Click="Close_Button"/>
            <Button Content="{Binding Save_Diagnostics}" HorizontalAlignment="Left" Height="34" Margin="437,46,0,0" VerticalAlignment="Top" Width="177" Click="Saved_Diagnostic"/>
            <Button Content="{Binding Report_Diagnostics}" HorizontalAlignment="Left" Height="34" Margin="437,85,0,0" VerticalAlignment="Top" Width="177"/>
            <TextBlock  HorizontalAlignment="Left" Height="98" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="422"><Span Foreground="#FFA31515" FontSize="12.6666666666667" FontFamily="Consolas"><Run Foreground="Black" Text="{Binding Intro}"/></Span></TextBlock>
            <Grid Margin="28,138,11,233">
                <Rectangle HorizontalAlignment="Left" Height="398" Stroke="Gray" StrokeThickness="2" VerticalAlignment="Top" Width="586"/>




            </Grid>




        </Grid>
    </ScrollViewer>
</Window>
